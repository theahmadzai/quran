{
    "name": "quran/quran",
    "description": "Provides quran.com api in simple way",
    "type": "library",
    "keywords": ["quran.com", "quran api", "quran"],
    "homepage": "https://quran.api-docs.io/v3/",
    "license": "MIT",
    "authors": [{
        "name": "Javed Ahmadzai",
        "email": "theahmadzai@hotmail.com",
        "homepage": "http://theahmadzai.github.io"
    }],
    "support": {
        "issues": "https://github.com/theahmadzai/quran/issues"
    },
    "require": {
        "php": ">=5.6.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Quran\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
